<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smartfoodcluster.feedme.ShoppingCartScreen"
    tools:showIn="@layout/app_bar_shopping_cart_screen">

    <TextView
        android:id="@+id/totalAmountLabelGui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:text="Review &amp; Pay"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/itemsOrderedListGui"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_above="@+id/totalAmountLabelGui"
        android:layout_toStartOf="@id/totalAmountLabelGui"
        android:layout_weight="4"
        android:headerDividersEnabled="true"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/totalAmountGui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/itemsOrderedListGui"
        android:layout_gravity="end"
        android:layout_toRightOf="@id/itemsOrderedListGui"
        android:layout_weight="2"
        android:text="TEXT"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/makePaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/totalAmountGui"
        android:layout_below="@+id/totalAmountGui"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:background="@drawable/payment_button"
        android:text="Make Payment >>"
        android:textAlignment="center"
        android:textAppearance="@android:color/white" />
</LinearLayout>